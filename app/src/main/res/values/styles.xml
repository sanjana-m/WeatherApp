<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:colorForeground">@color/text_color_secondary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
    </style>

    <style name="GridLayoutTextCaption" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/regular_padding</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="GridLayoutTextValue" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/regular_padding</item>
        <item name="android:alpha">0.73</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="CitySpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:background">@drawable/bg_rounded_grey</item>
        <item name="android:drawableEnd">@drawable/ic_action_down</item>
    </style>

</resources>
